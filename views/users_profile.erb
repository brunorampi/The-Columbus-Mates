<div>
  <h2><span class"web_page_font">Name: </span><%= @user.name %></h2>
  <h2><span class"web_page_font">Second Name: </span> <%= @user.surname %></h2>
  <h2><span class"web_page_font">Age: </span><%= @user.age %></h2>
  <h2><span class"web_page_font"> Nationality: </span><%= @user.nationality %></h2>
  <h2><span class"web_page_font"> Email: </span><%= @user.email %></h2>
  <h2><span class"web_page_font"> Username: </span> <%= @user.username %></h2>
</div>

<% @comments.each do |comment| %>
  <h3><%= current_user.username %> says: </h3>
  <p><%= comment.body %> </p>
<% end %>
<% @ratings.each do |rating| %>
<p>with a total score of:</p> <h3> <%= rating.score %></h3>
<% end %>
<form action="/comments" method="post">
  <input type="hidden" name="user_id" value="<%= @user.id %>">
  <textarea name="body" id="" cols="30" rows="10"></textarea>
  <label for="">rating</label>
  <select name="score" id="">

    <option value="1"> 1  </option>
    <option value="2"> 2  </option>
    <option value="2"> 3  </option>
    <option value="2"> 4  </option>
    <option value="2"> 5  </option>
 </select>

    <button>post comment</button>
</form>
